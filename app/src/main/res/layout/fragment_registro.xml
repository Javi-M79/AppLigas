<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_registro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgrounddapp"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    app:passwordToggleEnabled="true">


    <androidx.cardview.widget.CardView
        android:id="@+id/imgRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="95dp"
        app:cardElevation="10dp">

        <ImageView
            android:id="@+id/imgLogin"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:src="@drawable/login"
            app:cardCornerRadius="5dp" />


    </androidx.cardview.widget.CardView>


    <!--Nombre-->

    <TextView
        android:id="@+id/txtNombreRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="30dp"
        android:inputType="textEmailAddress"
        android:text="Nombre:"
        android:textColor="@color/white" />


    <EditText
        android:id="@+id/editApellidoResgistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:hint="Introduzca su apellido"
        android:inputType="textEmailAddress" />


    <!--Apellido-->

    <TextView
        android:id="@+id/txtapellidoRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="10dp"
        android:inputType="textEmailAddress"
        android:text="Apellido:"
        android:textColor="@color/white" />


    <EditText
        android:id="@+id/editNombreResgistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Introduzca su nombre"
        android:inputType="textEmailAddress" />


    <!--Correo Electronico-->
    <TextView
        android:id="@+id/txtcorreoRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="10dp"
        android:inputType="textEmailAddress"
        android:text="Correo electronico:"
        android:textColor="@color/white" />


    <EditText
        android:id="@+id/editCorreoRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/iconomail"
        android:drawablePadding="10dp"
        android:hint="Introduzca su correo electronico"
        android:inputType="textEmailAddress" />

    <!--Password-->

    <TextView
        android:id="@+id/txtPassResgistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="10dp"
        android:inputType="textEmailAddress"
        android:text="Contraseña:"
        android:textColor="@color/white" />


    <EditText
        android:id="@+id/editPassRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/password"
        android:drawablePadding="10dp"
        android:hint="Introduzca contraseña"
        android:inputType="textPassword"
        app:passwordToggleEnabled="true" />


    <Button
        android:id="@+id/Btn_registrar"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/boton"
        android:text="Resgistrar"
        android:textColor="@color/black" />


    <!--

       TODO REVISAR ANIMACION

       <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottiefootballLoading"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="20dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="carga_ligas.json"
            app:lottie_imageAssetsFolder="assets"
            app:lottie_loop="true" />
    -->

</LinearLayout>

