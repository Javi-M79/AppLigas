<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/favoritosfragmentxml"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgrounddapp"
    android:padding="10dp"
    tools:context=".ui.fragments.FavoritosFragment">



    <TextView
        android:id="@+id/textoPrueba"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/recyclerFavoritos"
        android:text="ME PASA LA LISTA VACIA??">


    </TextView>


    <androidx.recyclerview.widget.RecyclerView



        android:id="@+id/recyclerFavoritos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textoPrueba" />

</androidx.constraintlayout.widget.ConstraintLayout>